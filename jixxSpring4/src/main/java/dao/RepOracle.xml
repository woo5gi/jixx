<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kitri.project.repository.Mapper">
	<resultMap type="vo.Repository" id="MemberResultMap">
		<result property="rep_id" column="rep_id" />
		<result property="rep_name" column="rep_name" />
		<result property="rep_uri" column="rep_uri" />				
	</resultMap>
		
	

	<insert id="insert"
		parameterType="vo.Repository">		
		 insert into member values((select max(user_id)+1 from member),#{email},#{pwd},#{name})
	</insert>

	<update id="update"
		parameterType="vo.Repository">
		update member
		set
		pwd=#{pwd}, name=#{name}, email=#{email} where id=#{id}
	</update>

	<delete id="delete" parameterType="String">
		delete member where
		id=#{id}
	</delete>
</mapper>