<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kitri.jixx.member.Mapper">
	<resultMap type="vo.Member" id="MemberResultMap">
		<result property="id" column="user_id" />
		<result property="email" column="user_email" />
		<result property="pwd" column="user_pass" />
		<result property="name" column="user_name" />		
	</resultMap>

	<select id="select" resultMap="MemberResultMap"
		parameterType="String">
		SELECT * FROM member where id=#{id}
	</select>
	
	<select id="selectemail" resultMap="MemberResultMap"
		parameterType="String">
		SELECT * FROM member where user_email=#{email}
	</select>

	<insert id="insert"
		parameterType="vo.Member">		
		 insert into member values((select max(user_id)+1 from member),#{email},#{pwd},#{name})
	</insert>

	<update id="update"
		parameterType="vo.Member">
		update member
		set
		pwd=#{pwd}, name=#{name}, email=#{email} where id=#{id}
	</update>

	<delete id="delete" parameterType="String">
		delete member where
		id=#{id}
	</delete>

</mapper>